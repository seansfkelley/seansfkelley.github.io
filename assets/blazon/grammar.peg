Field
  = fill:Color _ "," _ main:Main _ "." { return ["field", fill, main] }
  / main:Main _ "." { return ["field", "argent", main] }

Main
  = ( count:Count _ shape:Shape "s"? _ fill:Color { return [shape, fill] } ) +

Count
  = "a" " " { return 1 }
  / "two" { return 2 }

Color
  = "azure"i
  / "or"i
  / "argent"i
  / "gules"i
  / "vert"i
  / "sable"i

Shape
  = "bend"i
  / "sword"i
  / "ignore this because peggy breaks weirdly on the last rule here"

_ "whitespace"
  = [ \t\n\r]*
